<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentFixing">


        <EditText
            android:id="@+id/editTextappointername"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextappointerage"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="AGE"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextappointerdob"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="D.O.B"
            android:inputType="date"
            android:textAlignment="center" />

            <Spinner
                android:id="@+id/appointergender"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="290dp"
                android:entries="@array/stopping"
                android:background="@color/colorAccent" />

            <Spinner
                android:id="@+id/appointerbloodgrp"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginStart="215dp"
                android:entries="@array/stopping"
                android:layout_marginTop="290dp"
                android:background="@color/colorPrimary" />

            <Spinner
                android:id="@+id/appointerbookdprt"
                android:layout_width="380dp"
                android:layout_height="55dp"
                android:entries="@array/stopping"
                android:layout_marginStart="15dp"
                android:layout_marginTop="360dp"
                android:background="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editTextappointerphone"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextappointeraddress"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="Enter your Address"
            android:inputType="textPostalAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextappointerdate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="Appointment Date"
            android:inputType="date"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextappointertime"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/textbox"
            android:ems="10"
            android:hint="Appointment Time"
            android:inputType="time"
            android:textAlignment="center" />

        <Button
            android:id="@+id/fixtheappointer"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="670dp"
            android:background="@color/pinky"
            android:gravity="center"
            android:text="Fix The Appointment" />

</RelativeLayout>